<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="2024-01-11-13:10-products-table" author="DariaLavrushko">
        <createTable tableName="products">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(50)">
            </column>
            <column name="description" type="varchar(255)">
            </column>
            <column name="weight" type="DECIMAL(10, 2)">
            </column>
            <column name="color" type="varchar(30)">
            </column>
            <column name="category_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_products_categories" references="categories(id)"/>
            </column>
            <column name="buy_price" type="DECIMAL(10, 2)">
<!--                <constraints nullable="false"/>-->
            </column>
            <column name="state" type="ENUM('Draft', 'InStock', 'Sold')">
<!--                <constraints nullable="false"/>-->
            </column>
            <column name="store_id" type="bigint">
            </column>
            <column name="update_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="create_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>